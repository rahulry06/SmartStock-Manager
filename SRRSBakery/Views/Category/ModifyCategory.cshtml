@model IEnumerable<SRRSBakery.Models.Category>

<h1>List of Categories</h1>
    <table class="table table-striped table-danger">
          <thead>
            <tr>
              <th scope="col">S.No</th>
              <th scope="col">Category Name</th>
              <th scope="col">Discription</th>
              <th scope="col">Category Id</th>
              <th scope="col">Update</th>
              <th scope="col">Remove</th>

            </tr>
            </thead>
            <tbody>
             @{int i = 0;}
            @foreach (var category in Model)
            {
                i = i + 1;
    
                 <tr>
                     <th scope="row">@i</th>
                     <td><a asp-controller="Category" asp-action="ListCategory" asp-route-id="@category.CategoryId"><h5> @category.CategoryName </h5></a></td>
                     <td>@category.Description</td>
                     <td>@category.CategoryId</td>
                     <td><a asp-controller="Category" asp-action="EditCategory" asp-route-id="@category?.CategoryId">Update</a></td>
                     <td><a asp-controller="Category" asp-action="RemoveCategory" asp-route-id="@category?.CategoryId">Remove</a></td>
                  </tr>
             }
            </tbody>
            </table>
            <div class="text-center">
            <a asp-action="CreateCategory"><h4>Add More Category</h4></a>
            </div>

